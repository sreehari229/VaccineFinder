@using VaccineFinder.Models
@model LocationDistrict
@{
    ViewBag.Title = "ShowDistricts";
}

<h2>Select Distric</h2>

<h1>Total number of states is @Model.ttl1</h1>

@using (Html.BeginForm("Showinfoloc", "Home", FormMethod.Post))
{

    <select name="dis" id="dis">
        @foreach (var item in Model.districts)
        {
            <option value="@item.district_id">@item.district_name</option>
        }
    </select>
    <input type="date" min="@DateTime.Now"  name="dt" id="dt"/>
    <input type="submit" value="Select District" />

}
